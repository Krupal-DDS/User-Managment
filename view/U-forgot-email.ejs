<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>forgot Email</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <div>
    <h2>Verify User for forgot Password</h2>
    UserEmail : <input type="email" id="email" required><br><br>  
    <button id="btn">Send Link</button>    
</div>
<script>
     const form = document.getElementById('btn');       
        form.addEventListener("click", async (e) => {        
          e.preventDefault(e);
          const email = document.getElementById('email').value;          
           await axios.post("http://localhost:9999/forgot",{email})
                .then((response)=>{
                console.log(response);              
                if(response.status===200){                                          
                    alert('Verification Mail send to you Check your inbox');
                }                                                 
            }).catch((response)=>{
              console.log(response);
            })
        });
</script>
</body>
</html>