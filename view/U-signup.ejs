<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>signup page</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <div>
        <h2>Sign up</h2>
        <form action="/signup">
                Username : <input type="text" name="username" required><br><br>
                Email : <input type="email" name="email" required><div class="email error"></div><br>
                Password : <input type="password" name="password"><div class="password error"></div><br>
                confirm Password : <input type="password" name="cpassword"><div class="password error"></div><br>
                <button type="submit" value="submit">submit</button>
        </form>
    </div>
    <script>        
        const form = document.querySelector("form");       
        form.addEventListener("submit",async (e)=>{
            e.preventDefault();
            const username = form.username.value;
            const email = form.email.value;
            const password = form.password.value;
            const cpassword = form.cpassword.value;            

            axios.post("http://localhost:9999/signup", {
            username,email,password,cpassword 
          })   
          .then((response) => {
            console.log(response);
            if(response.status===200){
              alert('verification mail send to your registered Email');
            }
          })
          .catch((response) => {
            console.log(response.message, "response");
          });         
        })        
              
    </script>
</body>
</html>